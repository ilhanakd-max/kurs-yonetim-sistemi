<Window x:Class="KursYonetimSistemi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Çeşme Belediyesi Kurs Yönetim Sistemi" Height="900" Width="1400" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Border Background="{StaticResource PrimaryBrush}" DockPanel.Dock="Top" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="SpaceBetween">
                <StackPanel>
                    <TextBlock Text="Çeşme Belediyesi Kültür Müdürlüğü" Foreground="White" FontSize="18" FontWeight="SemiBold" />
                    <TextBlock x:Name="TextKurum" Text="Kurs Yönetim Sistemi" Foreground="White" Opacity="0.8" />
                </StackPanel>
                <StackPanel HorizontalAlignment="Right">
                    <TextBlock x:Name="TextTarih" Text="" Foreground="White" FontSize="14" HorizontalAlignment="Right" />
                    <TextBlock x:Name="TextSaat" Text="" Foreground="White" FontSize="14" HorizontalAlignment="Right" />
                </StackPanel>
            </StackPanel>
        </Border>

        <TabControl x:Name="Tabs" Margin="10">
            <TabItem Header="Gösterge Paneli">
                <ScrollViewer>
                    <StackPanel>
                        <UniformGrid Columns="3" Margin="0,10,0,20" Rows="2">
                            <Border Background="White" Padding="16" Margin="4" CornerRadius="6" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Aktif Kurs" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock x:Name="LblKurs" FontSize="32" Foreground="{StaticResource SecondaryBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Background="White" Padding="16" Margin="4" CornerRadius="6" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Aktif Öğrenci" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock x:Name="LblOgrenci" FontSize="32" Foreground="{StaticResource SecondaryBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Background="White" Padding="16" Margin="4" CornerRadius="6" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Aktif Eğitmen" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock x:Name="LblEgitmen" FontSize="32" Foreground="{StaticResource SecondaryBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Background="White" Padding="16" Margin="4" CornerRadius="6" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Atölye Sayısı" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock x:Name="LblAtolye" FontSize="32" Foreground="{StaticResource SecondaryBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Background="White" Padding="16" Margin="4" CornerRadius="6" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Planlı Ders" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock x:Name="LblDers" FontSize="32" Foreground="{StaticResource SecondaryBrush}" />
                                </StackPanel>
                            </Border>
                            <Border Background="White" Padding="16" Margin="4" CornerRadius="6" BorderBrush="#ddd" BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Haftalık Saat" FontSize="16" FontWeight="SemiBold" />
                                    <TextBlock x:Name="LblSaat" FontSize="32" Foreground="{StaticResource SecondaryBrush}" />
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <GroupBox Header="Canlı Ders Paneli" Margin="0,0,0,10">
                            <ItemsControl x:Name="LiveLessonsList" />
                        </GroupBox>

                        <GroupBox Header="Bildirimler">
                            <ItemsControl x:Name="NotificationsList" />
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Kurslar">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <Button Content="Yeni Kurs" Click="YeniKurs_Click" />
                        <Button Content="Düzenle" Click="DuzenleKurs_Click" />
                        <Button Content="Sil" Background="{StaticResource AccentBrush}" Click="SilKurs_Click" />
                        <TextBox x:Name="AraKurs" Width="220" ToolTip="Ara" TextChanged="AraKurs_TextChanged" />
                    </StackPanel>
                    <DataGrid x:Name="GridKurs" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*" />
                            <DataGridTextColumn Header="Kategori" Binding="{Binding Kategori}" Width="200" />
                            <DataGridTextColumn Header="Seviye" Binding="{Binding Seviye}" Width="150" />
                            <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding Aktif}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Eğitmenler">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <Button Content="Yeni Eğitmen" Click="YeniEgitmen_Click" />
                        <Button Content="Düzenle" Click="DuzenleEgitmen_Click" />
                        <Button Content="Sil" Background="{StaticResource AccentBrush}" Click="SilEgitmen_Click" />
                    </StackPanel>
                    <DataGrid x:Name="GridEgitmen" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*" />
                            <DataGridTextColumn Header="Uzmanlık" Binding="{Binding Uzmanlik}" Width="200" />
                            <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="150" />
                            <DataGridTextColumn Header="E-posta" Binding="{Binding Eposta}" Width="200" />
                            <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding Aktif}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Öğrenciler">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <Button Content="Yeni Öğrenci" Click="YeniOgrenci_Click" />
                        <Button Content="Düzenle" Click="DuzenleOgrenci_Click" />
                        <Button Content="Sil" Background="{StaticResource AccentBrush}" Click="SilOgrenci_Click" />
                    </StackPanel>
                    <DataGrid x:Name="GridOgrenci" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*" />
                            <DataGridTextColumn Header="Kurs" Binding="{Binding KursId}" Width="200" />
                            <DataGridTextColumn Header="Telefon" Binding="{Binding Telefon}" Width="150" />
                            <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding Aktif}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Atölyeler">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <Button Content="Yeni Atölye" Click="YeniAtolye_Click" />
                        <Button Content="Düzenle" Click="DuzenleAtolye_Click" />
                        <Button Content="Sil" Background="{StaticResource AccentBrush}" Click="SilAtolye_Click" />
                    </StackPanel>
                    <DataGrid x:Name="GridAtolye" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*" />
                            <DataGridTextColumn Header="Kapasite" Binding="{Binding Kapasite}" Width="120" />
                            <DataGridTextColumn Header="Konum" Binding="{Binding Lokasyon}" Width="200" />
                            <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding Aktif}" Width="80" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Ders Planı">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <Button Content="Yeni Ders" Click="YeniDers_Click" />
                        <Button Content="Düzenle" Click="DuzenleDers_Click" />
                        <Button Content="Sil" Background="{StaticResource AccentBrush}" Click="SilDers_Click" />
                        <Button Content="Çakışma Kontrol" Click="Cakis_Click" />
                    </StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="3*" />
                        </Grid.RowDefinitions>
                        <DataGrid x:Name="GridDers" AutoGenerateColumns="False" SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Gün" Binding="{Binding Gun}" Width="100" />
                                <DataGridTextColumn Header="Saat" Binding="{Binding BaslangicSaati}" Width="160" />
                                <DataGridTextColumn Header="Süre" Binding="{Binding BitisSaati}" Width="160" />
                                <DataGridTextColumn Header="Kurs" Binding="{Binding KursId}" Width="*" />
                                <DataGridTextColumn Header="Eğitmen" Binding="{Binding OgretmenId}" Width="200" />
                                <DataGridTextColumn Header="Atölye" Binding="{Binding AtolyeId}" Width="200" />
                                <DataGridCheckBoxColumn Header="Aktif" Binding="{Binding Aktif}" Width="80" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <GroupBox Grid.Row="1" Header="Haftalık Takvim" Margin="0,8,0,0">
                            <ItemsControl x:Name="WeeklyCalendar" />
                        </GroupBox>
                    </Grid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Tatiller">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <Button Content="Yeni Tatil" Click="YeniTatil_Click" />
                        <Button Content="Düzenle" Click="DuzenleTatil_Click" />
                        <Button Content="Sil" Background="{StaticResource AccentBrush}" Click="SilTatil_Click" />
                    </StackPanel>
                    <DataGrid x:Name="GridTatil" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ad" Binding="{Binding Ad}" Width="*" />
                            <DataGridTextColumn Header="Başlangıç" Binding="{Binding Baslangic}" Width="160" />
                            <DataGridTextColumn Header="Bitiş" Binding="{Binding Bitis}" Width="160" />
                            <DataGridCheckBoxColumn Header="Tekrarlı" Binding="{Binding Tekrarli}" Width="100" />
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </TabItem>

            <TabItem Header="Kategoriler">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                        <Button Content="Yeni Kategori" Click="YeniKategori_Click" />
                        <Button Content="Sil" Background="{StaticResource AccentBrush}" Click="SilKategori_Click" />
                    </StackPanel>
                    <ListBox x:Name="ListeKategori" />
                </DockPanel>
            </TabItem>

            <TabItem Header="Raporlar">
                <StackPanel>
                    <TextBlock Text="Raporu hangi formatta almak istersiniz?" Margin="0,0,0,8" />
                    <StackPanel Orientation="Horizontal">
                        <Button Content="TXT" Click="RaporTxt_Click" />
                        <Button Content="Excel" Click="RaporExcel_Click" />
                        <Button Content="PDF" Click="RaporPdf_Click" />
                    </StackPanel>
                    <ListBox x:Name="ListeRapor" Height="400" />
                </StackPanel>
            </TabItem>

            <TabItem Header="Ayarlar">
                <StackPanel>
                    <Label Content="Kurum Adı" />
                    <TextBox x:Name="TxtKurum" />
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Mesai Başlangıç" />
                        <TextBox x:Name="TxtMesaiBas" Width="120" />
                        <Label Content="Mesai Bitiş" />
                        <TextBox x:Name="TxtMesaiBit" Width="120" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Ders Süresi (dk)" />
                        <TextBox x:Name="TxtDersSure" Width="120" />
                        <Label Content="Ara Süresi (dk)" />
                        <TextBox x:Name="TxtAraSure" Width="120" />
                    </StackPanel>
                    <CheckBox x:Name="ChkHaftaSonu" Content="Hafta Sonu Kapalı" />
                    <Button Content="Kaydet" Click="AyarKaydet_Click" Width="180" />
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Yedekle" Click="Yedekle_Click" />
                        <Button Content="Geri Yükle" Click="GeriYukle_Click" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
