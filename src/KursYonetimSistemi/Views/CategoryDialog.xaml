<Window x:Class="KursYonetimSistemi.Views.CategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kategori" Height="160" Width="360" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Kategori Adı" />
        <TextBox x:Name="TxtAd" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Kaydet" Width="120" Click="Kaydet_Click" />
            <Button Content="İptal" Width="120" Margin="10,0,0,0" Click="Iptal_Click" />
        </StackPanel>
    </StackPanel>
</Window>
