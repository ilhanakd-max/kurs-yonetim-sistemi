<Window x:Class="KursYonetimSistemi.Views.ScheduleDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ders Planı" Height="360" Width="460" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Kurs" />
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="CmbKurs" />

        <Label Grid.Row="1" Grid.Column="0" Content="Eğitmen" />
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CmbEgitmen" />

        <Label Grid.Row="2" Grid.Column="0" Content="Atölye" />
        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="CmbAtolye" />

        <Label Grid.Row="3" Grid.Column="0" Content="Gün" />
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="CmbGun">
            <ComboBoxItem Content="Pazartesi" />
            <ComboBoxItem Content="Salı" />
            <ComboBoxItem Content="Çarşamba" />
            <ComboBoxItem Content="Perşembe" />
            <ComboBoxItem Content="Cuma" />
            <ComboBoxItem Content="Cumartesi" />
            <ComboBoxItem Content="Pazar" />
        </ComboBox>

        <Label Grid.Row="4" Grid.Column="0" Content="Başlangıç" />
        <TextBox Grid.Row="4" Grid.Column="1" x:Name="TxtBaslangic" />

        <Label Grid.Row="5" Grid.Column="0" Content="Bitiş" />
        <TextBox Grid.Row="5" Grid.Column="1" x:Name="TxtBitis" />

        <CheckBox Grid.Row="6" Grid.Column="1" x:Name="ChkAktif" Content="Aktif" />

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Kaydet" Click="Kaydet_Click" Width="120" />
            <Button Content="İptal" Click="Iptal_Click" Width="120" Margin="10,0,0,0" />
        </StackPanel>
    </Grid>
</Window>
